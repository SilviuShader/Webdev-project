
@{
    ViewBag.Title = "Lista de domenii";
}

<h1>@ViewBag.Message</h1>
<h2>@ViewBag.Title</h2>

@foreach (var category in @ViewBag.Categories)
{
    @Html.Label("CategoryName", "Domeniu")
    <p>@category.CategoryName</p>
    <a class="btn btn-success" href="/Categories/Show/@category.CategoryId">Afișare domeniu</a>
    <a class="btn btn-success" href="/Categories/Edit/@category.CategoryId">Editare domeniu</a>
    <br />
    <hr />
    <br />
}

<br />
<a class="btn btn-primary" href="/Categories/New">Adaugă categorie</a>
<a class="btn btn-primary" href="/Articles/Index">Listă articole</a>
<br />